<h1>Listing Articles</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <tr>
          <td><div class="article-title"><%= link_to article.title, article_path(article) %></div></td>
          <td><div class="article-body"><%= truncate(article.description, length:200) %></div></td>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn-default" %></td>
          <td><%= link_to 'Destroy', article_path(article),
                  class: "btn-default",
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </div>
    </div>
  <% end %>
</table>
