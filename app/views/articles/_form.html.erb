
<% if @article.errors.any? %>
  <div id="error_explanation">
    <strong>
      <%= pluralize(@article.errors.count, "error") %>:
    </strong>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
 

 <div class="row", style="margin:auto">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form|%>
      <div class="form-group">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    
      <div class="form-group">
        <%= form.label :description %><br>
        <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
    
      <div class="form-group">
        <%= form.label :tags %> <br>
        <%= form.text_field :tag_list %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'btn btn-default btn-large button button-form' %>
    </div>
  <% end %>
  </div>
</div>
