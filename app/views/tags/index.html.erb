<h1>All the tags</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Articles with this tag</th>
    <th colspan="3"></th>
  </tr>

  <% @tags.each do |tag| %>
    <tr>
      <td><%= link_to tag.name, tag_path(tag) %></td>
      <td><% tag.articles.each do |article| %>
          <%= link_to article.title, article_path(article) %>
        <% end %>
      </td>
      <td><%= link_to 'Edit', edit_tag_path(tag), 
        class: "button" %>
      </td>
      <td><%= link_to 'Delete', tag_path(tag), 
        class: "button", 
        method: :delete, 
        data: {confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
</table>
