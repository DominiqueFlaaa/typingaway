
<h1>Edit Tag</h1>
 

<div class="row", style="margin:auto">
  <div class="col-xs-12">
    <%= form_for(@tag, :html => {class: "form-horizontal", role: "form"}) do |form|%>
      <div class="form-group">
        <%= form.label "name" %> <br>
        <%= form.text_field :name %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'btn btn-default btn-large button button-form' %>
      </div>
    <% end %>
  </div>
</div> 
<%= link_to 'Back', tags_path %>
